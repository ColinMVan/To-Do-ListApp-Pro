<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".task_detail">

  <TextView
      android:id="@+id/textView4"
      android:layout_width="143dp"
      android:layout_height="31dp"
      android:layout_marginTop="72dp"
      android:layout_marginEnd="124dp"
      android:textSize="18sp"
      android:text="Chryzor Baltazard"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.863"
      app:layout_constraintStart_toStartOf="@+id/imageView"
      app:layout_constraintTop_toBottomOf="@+id/imageView"
      app:layout_constraintVertical_bias="0.0" />

  <ImageView
      android:id="@+id/imageView"
      android:layout_width="388dp"
      android:layout_height="131dp"
      android:layout_marginTop="84dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/codingmeme" />

  <TextView
      android:id="@+id/AboutView"
      android:layout_width="149dp"
      android:layout_height="33dp"
      android:text="About The App"
      android:textSize="20sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.458"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.022" />

  <ImageView
      android:id="@+id/imageView2"
      android:layout_width="133dp"
      android:layout_height="139dp"
      android:layout_marginStart="4dp"
      android:layout_marginTop="108dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/textView3"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView"
      app:layout_constraintVertical_bias="0.0"
      app:srcCompat="@drawable/chryzor" />

  <ImageView
      android:id="@+id/imageView3"
      android:layout_width="115dp"
      android:layout_height="141dp"
      android:layout_marginTop="20dp"
      android:layout_marginEnd="24dp"
      app:layout_constraintEnd_toStartOf="@+id/textView6"
      app:layout_constraintTop_toBottomOf="@+id/textView5"
      app:srcCompat="@drawable/colin" />

  <Button
      android:id="@+id/backButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Back"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView6" />

  <TextView
      android:id="@+id/textView3"
      android:layout_width="228dp"
      android:layout_height="133dp"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="32dp"
      android:text="TextView"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView4" />

  <TextView
      android:id="@+id/textView5"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:text="Colin Van Hoveln"
      android:textSize="18sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView3" />

  <TextView
      android:id="@+id/textView6"
      android:layout_width="223dp"
      android:layout_height="127dp"
      android:layout_marginTop="20dp"
      android:layout_marginEnd="24dp"
      android:text="is a Computer Science major and current sophomore at Indiana University. He is specializing in Software Engineering and also enjoys taking coursework involving Artificial Intelligence."
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView5" />

</androidx.constraintlayout.widget.ConstraintLayout>