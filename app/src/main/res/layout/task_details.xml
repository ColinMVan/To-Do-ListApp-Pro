<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <!-- Task Name -->

    <!-- Mark as Complete Button -->

    <!-- Cancel Button -->

    <!-- Previous Task Button -->

    <TextView
        android:id="@+id/taskNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:padding="16dp"
        android:text="Task Name"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/markCompleteButton"
        android:layout_width="295dp"
        android:layout_height="48dp"
        android:layout_marginTop="116dp"
        android:padding="8dp"
        android:text="Mark as Complete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/taskNameTextView" />

    <!-- Next Task Button -->

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="295dp"
        android:layout_height="48dp"
        android:layout_marginTop="80dp"
        android:padding="8dp"
        android:text="Cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.405"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/markCompleteButton" />

    <Button
        android:id="@+id/previousTaskButton"
        android:layout_width="143dp"
        android:layout_height="46dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="56dp"
        android:padding="8dp"
        android:text="Previous Task"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cancelButton" />

    <Button
        android:id="@+id/nextTaskButton"
        android:layout_width="143dp"
        android:layout_height="46dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="4dp"
        android:padding="8dp"
        android:text="Next Task"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cancelButton" />


</androidx.constraintlayout.widget.ConstraintLayout>